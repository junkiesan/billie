<h1>Books#show</h1>

<%= @book.title %>
<br>
<%= @book.description %>
<br>
<%= @book.author %>
<p>----------------------------</p>
<%= @book.editor %>
<br>
<p>--------------</p>
<%= @book.shelf_list %>

<div class="btn-group">
  <button type="button" class="btn btn-danger">Add to shelf</button>
  <button type="button" class="btn btn-danger dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <div class="dropdown-menu">
    <% @book.shelf_list.each do |shelf| %>
      <a class="dropdown-item" href="#"><%= shelf %></a>
    <% end %>

    <div class="dropdown-divider"></div>
    <%= simple_form_for @book do |form| %>
      <%= form.label :shelf_list, "shelves" %>
      <%= form.text_field :shelf_list, value: @book.send(:shelf_list).to_s, placeholder: 'rails, development'%>
      <%= form.submit "Save my shelf", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

